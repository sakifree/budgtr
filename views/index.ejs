<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container">
        <h1>Budgtr</h1>
        <style></style>
        <h3 id="account">Bank Account: <%= bankAccount %></h3>
        <% if(bankAccount < 0) { %>
                <style>
                    #account {
                        background-color: #D62929
;
                    }
                </style>
        <% } else if (bankAccount > 1000) { %>
            <style>
                #account {
                    background-color: lightblue;
                }
            </style>
        <% } %>
        <a href="/budgets/new"><button>New Item</button></a>
        <% for(let i=0; i < budget.length; i++) { %>
            <table>
                <tr>
                    <td><%= budget[i].date%></td>
                    <td><a href="/budgets/<%=i%>"><%= budget[i].name%></a></td>
                    <td><%= budget[i].amount%></td>
                </tr>
            </table>
        <% } %>
    </div>
</body>
</html>